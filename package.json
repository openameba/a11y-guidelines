{
  "name": "a11y-guidelines",
  "description": "Ameba Accessibility Guidelines",
  "version": "0.0.0",
  "author": "CyberAgent, Inc.",
  "dependencies": {
    "ameba-color-palette.css": "^4.0.0",
    "postcss": "^8.2.6"
  },
  "devDependencies": {
    "autoprefixer": "^10.0.0",
    "bin-wrapper": "^4.1.0",
    "@11ty/eleventy": "^0.11.1",
    "cssnano": "^4.1.10",
    "husky": "^5.0.0",
    "lint-staged": "^10.0.0",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^8.0.0",
    "postcss-custom-properties": "^11.0.0",
    "postcss-import": "^14.0.0",
    "postcss-single-charset": "^2.0.0",
    "textlint": "^11.2.5",
    "textlint-rule-preset-japanese": "^5.0.0",
    "textlint-rule-preset-jtf-style": "^2.3.3",
    "textlint-rule-prh": "^5.2.0"
  },
  "engines": {
    "node": "15.4.0",
    "npm": "7.0.15"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "keywords": [
    "accessibility"
  ],
  "license": "SEE LICENSE IN LICENSE.md",
  "lint-staged": {
    "*.md": [
      "npm run textlint",
      "git diff --exit-code --quiet"
    ],
    "package.json": [
      "npx fixpack",
      "git diff --exit-code --quiet"
    ]
  },
  "postcss": {
    "plugins": {
      "postcss-custom-properties": {},
      "postcss-import": {},
      "autoprefixer": {},
      "postcss-single-charset": {}
    }
  },
  "private": true,
  "renovate": {
    "extends": [
      "config:base",
      "group:linters",
      "group:postcss",
      ":automergePatch",
      ":label(renovate)",
      ":preserveSemverRanges",
      ":timezone(Asia/Tokyo)"
    ],
    "assignees": [
      "herablog",
      "hrfmmymt",
      "masuP9",
      "nagatsukey",
      "sasaplus1",
      "syasuda90"
    ],
    "assigneesSampleSize": 2
  },
  "repository": "openameba/a11y-guidelines",
  "scripts": {
    "build": "npm-run-all build:*",
    "build:css": "postcss src/styles/*.css --dir public/css",
    "build:html": "NODE_ENV=production eleventy",
    "fixpack": "npx fixpack",
    "start": "npm-run-all -p serve watch",
    "serve": "DEBUG=Eleventy* eleventy --serve watch",
    "styles": "postcss src/styles/*.css --dir public/a11y-guidelines/css",
    "test": "npm run textlint",
    "textlint": "textlint content src",
    "textlint:fix": "textlint --fix content src",
    "watch": "npm run watch:styles",
    "watch:styles": "npm run styles --watch"
  }
}
